{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:vue/essential"],
	"parserOptions": {
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"plugins": ["vue"],
	"rules": {
		"vue/no-parsing-error": ["error", "always"],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", ["windows", "unix"]],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
